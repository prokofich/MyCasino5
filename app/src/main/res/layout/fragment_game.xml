<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.fragments.GameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#881e1e"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:id="@+id/id_game_img_card_suit"
            android:layout_marginLeft="170dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="60dp"
            android:id="@+id/id_game_tv_cash"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="70dp"
            android:id="@+id/id_game_img_cash"
            android:layout_gravity="center"
            android:layout_height="40dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="455dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_ll_2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Card game"
            android:textColor="@color/white"
            android:textSize="55sp"
            android:textStyle="bold" />

        <View
            android:layout_width="260dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_view1" />

        <TextView
            android:id="@+id/id_game_tv_text"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="-Place a bet on winning"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:hint="100"
                android:id="@+id/id_game_et_money"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="$ X2"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="122dp"
            android:text="play"
            android:id="@+id/id_game_button_play"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button" />


    </LinearLayout>

    <TextView
        android:layout_width="250dp"
        android:id="@+id/id_game_tv_wins"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:textStyle="italic"
        android:text="number of wins: 0"
        android:textColor="@color/black"
        android:textSize="30sp" />



</LinearLayout>