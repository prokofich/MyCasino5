<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#881e1e"
    android:layout_height="match_parent"
    tools:context=".view.fragments.LoadingGameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="220dp">

        <LinearLayout
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_height="220dp">

            <TextView
                android:layout_width="200dp"
                android:gravity="center"
                android:id="@+id/id_loading_pravila1"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="180dp"
                android:layout_marginTop="20dp"
                android:id="@+id/id_loading_img_1"
                android:layout_height="180dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />

        </LinearLayout>




    </LinearLayout>


    <TextView
        android:id="@+id/id_loading_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_tv2_loaing"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <View
            android:layout_width="145dp"
            android:background="@drawable/background_view1"
            android:layout_gravity="center"
            android:layout_height="7dp"/>
        <TextView
            android:layout_width="70dp"
            android:textStyle="bold"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="VS"
            android:textColor="@color/white"
            android:textSize="45sp" />
        <View
            android:layout_width="145dp"
            android:background="@drawable/background_view1"
            android:layout_gravity="center"
            android:layout_height="7dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/id_loading_tv2"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/background_tv2_loaing"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="220dp">

        <LinearLayout
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/id_loading_img_2"
                android:layout_width="180dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_height="180dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:id="@+id/id_loading_pravila2"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:layout_height="match_parent"/>

        </LinearLayout>




    </LinearLayout>


    <ProgressBar
        android:id="@+id/id_loading_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="338dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/white"
        android:scaleY="3" />




</LinearLayout>