<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#881e1e"
    android:layout_height="match_parent"
    tools:context=".view.fragments.GameOverFragment">

    <TextView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:text="End game"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="60sp"
        android:layout_height="100dp"/>

    <ImageView
        android:id="@+id/id_gameover_img"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="250dp"/>

    <TextView
        android:layout_width="300dp"
        android:text="you won!"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:id="@+id/id_gameover_tv1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/id_gameover_tv2"
        android:layout_width="300dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="you get $100"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="italic" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:textSize="20sp"
        android:id="@+id/id_gameover_btn_finish"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="go back to the menu"
        android:background="@drawable/background_button"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="60dp"/>




</LinearLayout>